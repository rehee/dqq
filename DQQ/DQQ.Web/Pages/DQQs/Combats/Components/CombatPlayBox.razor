@inherits ABCombatPlay
@if (CombatLog != null)
{
	<div>
		<p>时间限制 @MapLimitation?.ToString("mm 分 ss 秒")</p>
		<Progress IsShowValue="false" Value="CurrentPlayProgress" />
	</div>
	<div>
		波次 @Tick
	</div>
	<Divider />
	<div class="row g-3">
		@if (Players != null)
		{
			foreach (var p in Players)
			{
				if (p.PercentageHP > 0)
				{
					<ActorBox Item="CurrentLog" Actor="p" />
				}
			}
		}
	</div>
	<Divider />
	<div class="row g-3">

		@if (Enemies != null)
		{
			foreach (var e in Enemies)
			{
				if (e.PercentageHP > 0)
				{
					<ActorBox Item="CurrentLog" Actor="e" />
				}
			
			}
		}
	</div>
	<Divider />
	<div class="row g-3">
		<div class="col-12">
			<Console HeaderText="系统监控" Items="MessageItems" Height="126" ShowAutoScroll="true" />
		</div>
	</div>
}
