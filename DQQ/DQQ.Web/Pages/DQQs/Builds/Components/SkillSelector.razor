@using DQQ.Profiles.Skills
@inherits SkillSelectorPage
<Card>
	<HeaderTemplate>
		@CardTitle <span>&nbsp;</span> <Button Color="Color.Danger" Size="Size.ExtraSmall" OnClick="SkillUnselect">取消选择</Button>
	</HeaderTemplate>
	<BodyTemplate>
		<ListView TItem="SkillProfile" GroupName="(c)=> c.SkillGroup()" OnListViewItemClick="SkillSelected" OnQueryAsync="@OnQueryAsync" Collapsible="true" CollapsedGroupCallback="CollapsedGroupCallback">
			<HeaderTemplate>
				<div>技能列表</div>
			</HeaderTemplate>
			<BodyTemplate>
				<Card Color="@(context.ProfileNumber == SelectedSkillDTO?.SkillNumber? Color.Danger: Color.None)">
					<BodyTemplate>
						<p>
							@context.SkillName
						</p>
					</BodyTemplate>
				</Card>
			</BodyTemplate>
		</ListView>

	</BodyTemplate>
	<FooterTemplate>
		汇总信息:
	</FooterTemplate>
</Card>
